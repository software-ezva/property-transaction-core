
# Application
NODE_ENV=development
PORT=3000
TZ=America/New_York

# Database (PostgreSQL)
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=secret
DB_DATABASE=property_transaction_db
DB_TIMEZONE=America/New_York

# Database (Cloud SQL - Optional)
# Use DB_SOCKET_PATH for Cloud Run/App Engine. If set, DB_HOST is ignored/optional.
# DB_SOCKET_PATH=/cloudsql/project:region:instance
# DB_SSL=true

# Security
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:4200

# Auth0
AUTH0_ISSUER_URL=https://your-tenant.us.auth0.com/
AUTH0_AUDIENCE=https://your-api-identifier/

# Firebase Storage
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# Firebase Credentials (Optional if running on GCP with ADC)
# If not provided, the app will attempt to use Application Default Credentials (ADC)
# Required only for local development or if not using ADC
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour private key here\n-----END PRIVATE KEY-----\n"
